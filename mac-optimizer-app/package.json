{
  "name": "mac-optimizer",
  "version": "1.0.0",
  "homepage": "./",
  "description": "AI-powered Mac optimization",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev-react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev-react": "react-scripts start",
    "build": "react-scripts build",
    "build-protected": "node scripts/build-protected.js",
    "electron": "electron .",
    "electron-pack": "electron-builder",
    "electron-dev": "concurrently \"npm run dev-react\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "npm run build && electron-builder --publish=never",
    "dist": "npm run build-protected && electron-builder --publish=always",
    "rebuild-native": "node-gyp rebuild || echo 'Native rebuild completed'",
    "security-check": "npm audit --audit-level=moderate && echo 'Security check completed'",
    "release": "npm run build-protected && electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "electron": "^37.2.5",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.6.2",
    "keychain": "^1.5.0",
    "lucide-react": "^0.263.1",
    "node-addon-api": "^8.5.0",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "recharts": "^2.8.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@electron/notarize": "^2.2.1",
    "babel-loader": "^10.0.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-plugin-transform-remove-debugger": "^6.9.4",
    "cmake-js": "^7.3.1",
    "concurrently": "^8.2.2",
    "electron-builder": "^24.13.3",
    "node-gyp": "^11.3.0",
    "terser-webpack-plugin": "^5.3.14",
    "wait-on": "^7.2.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-obfuscator": "^3.5.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "publish": {
    "provider": "github",
    "owner": "your-username",
    "repo": "memory-monster",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.memorymonster.app",
    "productName": "Memory Monster",
    "directories": {
      "output": "dist",
      "buildResources": "build-resources"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "src/**/*",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!**/.DS_Store",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraFiles": [
      {
        "from": "native/build/Release/",
        "to": "Resources/native/",
        "filter": [
          "*.node"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build-resources/icon.icns",
      "entitlements": "build-resources/entitlements.mac.plist",
      "entitlementsInherit": "build-resources/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "type": "distribution",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "publish": {
        "provider": "github",
        "owner": "your-username",
        "repo": "memory-monster"
      },
      "notarize": {
        "teamId": "${APPLE_TEAM_ID}"
      }
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "build-resources/icon.icns",
      "background": "build-resources/dmg-background.png",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "afterSign": "scripts/notarize.js",
    "publish": [
      {
        "provider": "github",
        "owner": "your-username",
        "repo": "memory-monster",
        "vPrefixedTagName": true,
        "releaseType": "release"
      }
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "buildVersion": "${env.BUILD_NUMBER}",
    "buildDependenciesFromSource": false
  }
}
