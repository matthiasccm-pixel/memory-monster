{
  "name": "mac-optimizer",
  "version": "1.0.0",
  "homepage": "./",
  "description": "AI-powered Mac optimization",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev-react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev-react": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron ."
  },
  "dependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "electron": "^37.2.5",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.263.1",
    "node-addon-api": "^8.5.0",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "recharts": "^2.8.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "cmake-js": "^7.3.1",
    "concurrently": "^8.2.2",
    "node-gyp": "^11.3.0",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "publish": {
    "provider": "github",
    "owner": "your-username",
    "repo": "memory-monster",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.memorymonster.app",
    "productName": "Memory Monster",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "your-username",
        "repo": "memory-monster"
      }
    ]
  }
}
